<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd" >

	<!-- Services -->
	<bean id="userassignment.assignUserResourceTaskService" class="fr.paris.lutece.plugins.workflow.modules.userassignment.service.task.AssignUserResourceTaskService" />
	<bean id="userassignment.assignUserResourceTaskConfigService" class="fr.paris.lutece.plugins.workflowcore.service.config.TaskConfigService" 
	p:taskConfigDAO-ref="userassignment.assignUserResourceTaskConfigDao" />
	
	<!-- Dao -->
	<bean id="userassignment.resourceUserDAO" class="fr.paris.lutece.plugins.workflow.modules.userassignment.business.ResourceUserDAO" />
	<bean id="userassignment.assignUserResourceTaskConfigDao" class="fr.paris.lutece.plugins.workflow.modules.userassignment.business.AssignUserResourceTaskConfigDao" />
	
	<!-- AdminUserListProvide -->
	<bean id="userassignment.selfAssignAdminUserListProvider" class="fr.paris.lutece.plugins.workflow.modules.userassignment.business.SelfAssignAdminUserListProvider"/>

	<!-- Task -->
	<bean id="userassignment.assignUserResourceTask"
        class="fr.paris.lutece.plugins.workflow.modules.userassignment.service.task.AssignUserResourceTask"
        scope="prototype" />
        
    <bean id="userassignment.assignUserResourceTaskConfig" 
    	class="fr.paris.lutece.plugins.workflow.modules.userassignment.business.AssignUserResourceTaskConfig" scope="prototype" />
        
    <bean id="userassignment.assignUserResourceTypeTask"
        class="fr.paris.lutece.plugins.workflowcore.business.task.TaskType"
        p:key="assignUserResourceTask"
        p:titleI18nKey="module.workflow.userassignment.task.user.assign.title"
        p:beanName="userassignment.assignUserResourceTask"
        p:configBeanName="userassignment.assignUserResourceTaskConfig"
        p:taskForAutomaticAction="false"
        p:configRequired="true"
        p:formTaskRequired="true" />
        
    <bean id="userassignment.assignUserResourceTaskComponent"
        class="fr.paris.lutece.plugins.workflow.modules.userassignment.web.task.AssignUserResourceTaskComponent"
        p:taskType-ref="userassignment.assignUserResourceTypeTask"
        p:taskConfigService-ref="userassignment.assignUserResourceTaskConfigService"/>
</beans>
